{
  "info": {
    "name": "Candidate Referral Management System API",
    "description": "Complete API collection for testing the Candidate Referral Management System",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/signup",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "signup"]
            }
          }
        },
        {
          "name": "Login User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "login"]
            }
          }
        },
        {
          "name": "Refresh Token",
          "request": {
            "method": "POST",
            "url": {
              "raw": "{{baseUrl}}/api/auth/refresh-token",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "refresh-token"]
            }
          }
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/auth/logout",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "logout"]
            }
          }
        }
      ]
    },
    {
      "name": "Candidates",
      "item": [
        {
          "name": "Create Candidate",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "name",
                  "value": "Jane Smith",
                  "type": "text"
                },
                {
                  "key": "email",
                  "value": "jane.smith@example.com",
                  "type": "text"
                },
                {
                  "key": "phone",
                  "value": "+1234567890",
                  "type": "text"
                },
                {
                  "key": "jobTitle",
                  "value": "Software Engineer",
                  "type": "text"
                },
                {
                  "key": "notes",
                  "value": "Excellent candidate with 5 years experience",
                  "type": "text"
                },
                {
                  "key": "resume",
                  "type": "file",
                  "src": "/path/to/resume.pdf"
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/api/candidates",
              "host": ["{{baseUrl}}"],
              "path": ["api", "candidates"]
            }
          }
        },
        {
          "name": "Get All Candidates",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/candidates?page=1&limit=10&status=Pending",
              "host": ["{{baseUrl}}"],
              "path": ["api", "candidates"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                },
                {
                  "key": "status",
                  "value": "Pending"
                }
              ]
            }
          }
        },
        {
          "name": "Get Candidate by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/candidates/{{candidateId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "candidates", "{{candidateId}}"]
            }
          }
        },
        {
          "name": "Update Candidate Status",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"Reviewed\",\n  \"notes\": \"Initial screening completed\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/candidates/{{candidateId}}/status",
              "host": ["{{baseUrl}}"],
              "path": ["api", "candidates", "{{candidateId}}", "status"]
            }
          }
        },
        {
          "name": "Update Candidate Details",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Jane Updated\",\n  \"jobTitle\": \"Senior Software Engineer\",\n  \"notes\": \"Updated information\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/candidates/{{candidateId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "candidates", "{{candidateId}}"]
            }
          }
        },
        {
          "name": "Delete Candidate",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/candidates/{{candidateId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "candidates", "{{candidateId}}"]
            }
          }
        },
        {
          "name": "Get Candidate Statistics",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/candidates/stats",
              "host": ["{{baseUrl}}"],
              "path": ["api", "candidates", "stats"]
            }
          }
        },
        {
          "name": "Download Resume",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/candidates/{{candidateId}}/resume",
              "host": ["{{baseUrl}}"],
              "path": ["api", "candidates", "{{candidateId}}", "resume"]
            }
          }
        }
      ]
    },
